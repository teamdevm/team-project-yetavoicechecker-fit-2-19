<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".OneCallFragment"
    android:id="@+id/Num"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/incoming_call_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        />

    <Button
        android:id="@+id/scam_report_button"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#FF0000"
        android:text="@string/Scammer"
        android:layout_marginBottom="10dp"
        android:onClick="scamBtnClick">
    </Button>

    <Button
        android:id="@+id/spam_report_button"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/yellow"
        android:text="@string/Spammer"
        android:layout_marginBottom="10dp"
        android:onClick="spamBtnClick">
    </Button>

</LinearLayout>